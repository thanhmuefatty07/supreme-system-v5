# Supreme System V5 Environment Configuration
# Copy this file to .env and fill in your actual values

# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true

# Trading Configuration
INITIAL_CAPITAL=100000
MAX_POSITION_SIZE=0.1
STOP_LOSS_PCT=0.02
TAKE_PROFIT_PCT=0.05

# Risk Management
MAX_DAILY_LOSS_PCT=0.05
MAX_PORTFOLIO_DRAWDOWN=0.15
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=300

# Data Configuration
HISTORICAL_DATA_PATH=./data/historical
REALTIME_DATA_UPDATE_INTERVAL=60

# Monitoring Configuration
ENABLE_DASHBOARD=true
DASHBOARD_PORT=8501
LOG_LEVEL=INFO

# Strategy Configuration
DEFAULT_STRATEGY=MomentumStrategy
STRATEGY_PARAMS={\"rsi_period\": 14, \"macd_fast\": 12, \"macd_slow\": 26}

# Performance Configuration
ENABLE_PROFILING=false
MEMORY_MONITORING=true
CPU_MONITORING=true

# Security Configuration
ENCRYPT_SENSITIVE_DATA=true
API_KEY_ENCRYPTION_KEY=your_encryption_key_here

# Development Configuration
DEBUG_MODE=false
ENABLE_MOCK_TRADING=false