# Supreme System V5 - Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ============================================
# CORE APPLICATION SETTINGS
# ============================================
ENVIRONMENT=development
LOG_LEVEL=info
API_HOST=0.0.0.0
API_PORT=8000
PROMETHEUS_PORT=9090

# ============================================
# SECURITY & AUTHENTICATION
# ============================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=60

# ============================================
# DATA SOURCE API KEYS
# ============================================
ALPHA_VANTAGE_KEY=your-alpha-vantage-api-key-here
FINNHUB_KEY=your-finnhub-api-key-here

# ============================================
# EXCHANGE API KEYS (Optional)
# ============================================
BINANCE_API_KEY=your-binance-api-key-here
BINANCE_API_SECRET=your-binance-api-secret-here
BINANCE_TESTNET=true

# ============================================
# DATABASE & CACHE
# ============================================
REDIS_URL=redis://localhost:6379/0
DATABASE_URL=sqlite:///./data/supreme.db

# ============================================
# MONITORING
# ============================================
ENABLE_METRICS=true

# ============================================
# PERFORMANCE SETTINGS
# ============================================
API_RATE_LIMIT_PER_MINUTE=60
WEBSOCKET_UPDATE_FREQUENCY_MS=2000
MAX_CONNECTIONS=100

# ============================================
# TRADING CONFIGURATION
# ============================================
BASE_CURRENCY=USDT
TRADING_PAIRS=AAPL,TSLA,MSFT
MAX_POSITION_SIZE=1000.0
MAX_DAILY_LOSS=100.0
STOP_LOSS_PCT=2.0
TAKE_PROFIT_PCT=4.0
MAX_OPEN_POSITIONS=5

# ============================================
# AI COMPONENT SETTINGS
# ============================================
USE_NEUROMORPHIC=true
USE_ULTRA_LOW_LATENCY=true
USE_FOUNDATION_MODELS=true
USE_MAMBA_SSM=true

# ============================================
# DATA SOURCE CONFIGURATION
# ============================================
USE_REAL_DATA=true
DATA_CACHE_TTL_SECONDS=5

# ============================================
# DEVELOPMENT / TESTING
# ============================================
DEBUG=false
ENABLE_DOCS=true
TEST_MODE=true
