# Supreme System V5 - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# === API CONFIGURATION ===
# JWT secret key for authentication (REQUIRED)
JWT_SECRET_KEY=your-secure-jwt-secret-key-here-minimum-32-chars

# API encryption key for sensitive data (REQUIRED)
API_KEY_ENCRYPTION_KEY=your-secure-api-encryption-key-here

# Database URL (optional - defaults to SQLite)
DATABASE_URL=sqlite:///app/data/supreme.db

# Redis URL (optional - defaults to local Redis)
REDIS_URL=redis://localhost:6379

# Redis password (optional)
REDIS_PASSWORD=your-secure-redis-password

# === MONITORING & OBSERVABILITY ===
# Prometheus metrics port
PROMETHEUS_PORT=9090

# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# === GRAFANA CONFIGURATION ===
# Grafana admin credentials
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-admin-password
GRAFANA_DB_NAME=grafana
GRAFANA_DB_USER=grafana
GRAFANA_DB_PASSWORD=your-secure-grafana-db-password

# === EMAIL CONFIGURATION (SMTP) ===
# SMTP server settings for alerts and notifications
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_ADDRESS=your-email@gmail.com

# === POSTGRESQL CONFIGURATION (Production) ===
# PostgreSQL database settings
POSTGRES_DB=supreme_system_v5
POSTGRES_USER=supreme
POSTGRES_PASSWORD=your-secure-postgres-password

# === DEVELOPMENT SETTINGS ===
# Environment (development, testing, production)
ENVIRONMENT=development

# Log level (debug, info, warning, error)
LOG_LEVEL=info

# API server settings
API_HOST=0.0.0.0
API_PORT=8000

# === HARDWARE OPTIMIZATION (Auto-detected, optional override) ===
# Hardware profile (auto-detected: i3_8th_gen, i5_8th_gen, i7_8th_gen)
HARDWARE_PROFILE=auto

# Memory profile (auto-detected: 4gb, 8gb, 16gb)
MEMORY_PROFILE=auto

# === PERFORMANCE SETTINGS (Optional) ===
# Maximum number of trading symbols (auto-optimized by hardware)
MAX_SYMBOLS=auto

# Update frequency in milliseconds (auto-optimized by hardware)
UPDATE_FREQUENCY_MS=auto

# Single thread mode (auto-optimized for i3)
SINGLE_THREAD_MODE=auto

# Aggressive garbage collection (auto-optimized for low memory)
AGGRESSIVE_GC=auto

# === SECURITY SETTINGS ===
# Maximum login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Lockout duration in minutes
LOCKOUT_DURATION_MINUTES=15

# JWT token expiration in minutes
JWT_EXPIRE_MINUTES=60

# Refresh token expiration in days
REFRESH_TOKEN_EXPIRE_DAYS=30

# === API RATE LIMITING ===
# Maximum requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# === DATA SOURCE API KEYS (Optional) ===
# Alpha Vantage API key for stock data
ALPHA_VANTAGE_API_KEY=demo

# Finnhub API key for financial data
FINNHUB_API_KEY=demo

# === DEVELOPMENT OVERRIDES ===
# Enable API documentation (disable in production)
ENABLE_API_DOCS=true

# Enable debug mode (disable in production)
DEBUG=false

# === DOCKER COMPOSE OVERRIDES ===
# Use i3-optimized configuration
COMPOSE_FILE=docker-compose.yml
# For i3: COMPOSE_FILE=docker-compose.i3.yml
# For production: COMPOSE_FILE=docker-compose.yml:docker-compose.prod.yml