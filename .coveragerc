[run]
source = src
branch = True
parallel = True
omit =
    */tests/*
    */venv/*
    */__pycache__/*
    */test_*.py
    src/cli.py  # CLI is tested separately

[report]
precision = 2
show_missing = True
skip_covered = False
sort = Cover
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

[html]
directory = htmlcov

[xml]
output = coverage.xml
